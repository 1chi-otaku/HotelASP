<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hotel.styles.css" asp-append-version="true" />
</head>
<body>


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                @if (Context.Session.GetString("login") != null)
                {
                    <p>Welcome, @Context.Session.GetString("login") </p>
                    @using (Html.BeginForm("Logout", "User", FormMethod.Get))
                    {
                        <div>
                            <input type="submit" value="Log Out" />
                        </div>
                    }
                }
                else{
                    <div>

                    <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                    <a class="navbar-brand" asp-area="" asp-controller="User" asp-action="Register">Register</a>
                    
                    </div>
                }
               

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


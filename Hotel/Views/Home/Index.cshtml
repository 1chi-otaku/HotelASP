@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (Context.Session.GetString("name") != null)
    {
        <form id="messageForm" method="post" action="@Url.Action("AddMessage", "Home")">
            <div>
                <textarea id="message" name="message" class="form-control" rows="3" placeholder="Введите сообщение"></textarea>
                <button type="submit" class="btn btn-primary mt-2">Добавить сообщение</button>
            </div>
        </form>
    }
</div>

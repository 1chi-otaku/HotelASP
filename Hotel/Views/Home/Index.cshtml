@{
    ViewData["Title"] = "Home Page";
}

<style>

    body{
        background-color: #EEF2FF;
    }
    ul li {
        background-color: #D6DAF0;
        border: 1px solid #999;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 5px;
        min-width: 200px;
        display: grid;
        max-height: auto;
    }

        ul li:nth-child(even) {
            background-color: #dfe2f2;
        }

        ul li strong {
            color: #789922;
            font-weight: bold;
        }


        ul li span.date {
            color: #999;
            font-size: 12px;
        }

        ul li span.number {
            color: #999;
            font-size: 12px;
            font-style: italic;
        }

        ul li p {
            margin: 5px 0;
        }

    ul li {
        text-align: left;
    }
</style>

<div class="text-center">
    <ul>
        @if (ViewBag.Messages != null)
        {
            var counter = 1;
            foreach (var message in ViewBag.Messages)
            {
                <li>
                    <span>
                        <strong style="color: @(message.User.Login == "admin" ? "purple" : "#789922"); font-weight: @(message.User.Login == Context.Session.GetString("login") ? "900" : "600");">@message.User.Name</strong>

                        @message.MessageDate.ToString("dd/MM/yyyy (ddd) HH:mm:ss")
                        No. <span class="number">@counter</span><br>
                        <p>@message.Message</p>
                    </span>
                </li>
                counter++;
            }
        }
    </ul>
    @if (Context.Session.GetString("name") != null)
    {
        <form id="messageForm" method="post" action="@Url.Action("AddMessage", "Home")">
            <div>
                <textarea id="message" name="message" class="form-control" rows="3" placeholder="Enter Message" maxlength="120" required></textarea>
                <button type="submit" class="btn btn-primary mt-2">Comment</button>
            </div>
        </form>
    }
</div>
